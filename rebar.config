%% configure testing
{eunit_opts, []}.

%% configure compliation
{erl_opts, [
            warn_unused_vars,
            warn_export_all,
            warn_shadow_vars,
            %% warn_unused_import,
            warn_unused_function,
            warn_bif_clash,
            warn_unused_record,
            warn_deprecated_function,
            warn_obsolete_guard,
            strict_validation,
            warn_export_vars,
            warn_exported_vars,
            %%warn_missing_spec,
            warn_untyped_record,
            %% warnings_as_errors,
            debug_info
           ]}.

%% make executable landed in bin
{escript_name, "bin/zanox"}.

%% enable verbos for yecc
{yrl_opts, [
            {report, false},
            {verbose, true}
           ]}.

%% enable verbose for Leex
{xrl_opts, [
            {report, false},
            {verbose, true}
           ]}.

%% Which files to cleanup
{clean_files, ["erl_crash.dump", "ebin"]}.

{xref_checks, [undefined_function_calls]}.

%% configure dependency
{deps,     [
            {meck, ".*",
             {git, "https://github.com/eproxus/meck.git", "master"}},
            {proper, ".*",
             {git, "https://github.com/manopapad/proper.git", "master"}},
            {rebar_qc_plugin, ".*",
             {git, "https://github.com/hyperthunk/rebar_qc_plugin.git"}},
            {strftimerl, ".*",
             {git, "https://github.com/kennystone/strftimerl.git", "master"}},
            {ejson, ".*",
             {git, "https://github.com/benoitc/ejson.git", "master"}}
           ]}.

{lib_dirs, ["deps"]}.
